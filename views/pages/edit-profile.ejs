<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile - <%= typeof location !== 'undefined' && location ? location.businessName : 'Booking System' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .header-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem 0;
        }
        .edit-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            overflow: hidden;
        }
        .form-floating label {
            color: #6c757d;
        }
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
        }
        .btn-primary:hover {
            background: linear-gradient(135deg, #5a67d8 0%, #6b46c1 100%);
            transform: translateY(-1px);
        }
    </style>
</head>
<body>
    <div class="header-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1><i class="fas fa-user-edit me-3"></i>Edit Profile</h1>
                    <p class="mb-0 lead">Update your personal information</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <a href="/auth/appointments" class="btn btn-outline-light">
                        <i class="fas fa-arrow-left me-2"></i>Back to Appointments
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <!-- Success/Error Messages -->
                <% if (error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                
                <% if (success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        <%= success %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Edit Profile Form -->
                <div class="card edit-card">
                    <div class="card-header bg-light">
                        <h4 class="mb-0">
                            <i class="fas fa-user me-2 text-primary"></i>
                            Personal Information
                        </h4>
                    </div>
                    <div class="card-body p-4">
                        <form action="/auth/update-profile" method="POST">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" id="givenName" name="givenName" 
                                               value="<%= customer.givenName %>" required>
                                        <label for="givenName">First Name</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" id="familyName" name="familyName" 
                                               value="<%= customer.familyName %>" required>
                                        <label for="familyName">Last Name</label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-floating mb-3">
                                <input type="email" class="form-control" id="emailAddress" name="emailAddress" 
                                       value="<%= customer.emailAddress || '' %>">
                                <label for="emailAddress">Email Address</label>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    We'll use this email for appointment confirmations and updates
                                </div>
                            </div>

                            <div class="form-floating mb-4">
                                <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber" 
                                       value="<%= customer.phoneNumber || '' %>">
                                <label for="phoneNumber">Phone Number</label>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Include country code (e.g., +1 for US numbers)
                                </div>
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a href="/auth/appointments" class="btn btn-outline-secondary me-md-2">
                                    <i class="fas fa-times me-2"></i>Cancel
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Save Changes
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="card edit-card mt-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="fas fa-cog me-2 text-primary"></i>
                            Quick Actions
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="d-grid">
                                    <a href="/auth/refresh-profile" class="btn btn-outline-info">
                                        <i class="fas fa-sync me-2"></i>
                                        Refresh Profile Data
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-grid">
                                    <a href="/services" class="btn btn-outline-success">
                                        <i class="fas fa-plus me-2"></i>
                                        Book New Appointment
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Phone number formatting
        document.getElementById('phoneNumber').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length > 0 && !value.startsWith('1')) {
                value = '1' + value;
            }
            if (value.length <= 11) {
                if (value.length >= 7) {
                    value = value.replace(/(\d{1})(\d{3})(\d{3})(\d{0,4})/, '+$1 ($2) $3-$4');
                } else if (value.length >= 4) {
                    value = value.replace(/(\d{1})(\d{3})(\d{0,3})/, '+$1 ($2) $3');
                } else if (value.length >= 1) {
                    value = '+' + value;
                }
            }
            e.target.value = value;
        });

        // Form validation
        document.querySelector('form').addEventListener('submit', function(e) {
            const firstName = document.getElementById('givenName').value.trim();
            const lastName = document.getElementById('familyName').value.trim();
            
            if (!firstName || !lastName) {
                e.preventDefault();
                alert('Please enter both first and last name.');
                return;
            }
            
            const email = document.getElementById('emailAddress').value.trim();
            if (email && !/\S+@\S+\.\S+/.test(email)) {
                e.preventDefault();
                alert('Please enter a valid email address.');
                return;
            }
        });
    </script>
</body>
</html>
