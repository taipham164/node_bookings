<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Login - Firebase Auth</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <style>
    .login-container {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      padding: 20px;
    }
    
    .login-card {
      background: white;
      padding: 40px;
      border-radius: 10px;
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 400px;
    }
    
    .login-header {
      text-align: center;
      margin-bottom: 30px;
    }
    
    .login-header h1 {
      color: #333;
      margin-bottom: 10px;
    }
    
    .login-header p {
      color: #666;
      font-size: 14px;
    }
    
    .form-group {
      margin-bottom: 20px;
    }
    
    .form-group label {
      display: block;
      margin-bottom: 8px;
      color: #333;
      font-weight: 500;
    }
    
    .form-group input {
      width: 100%;
      padding: 12px;
      border: 2px solid #e1e1e1;
      border-radius: 6px;
      font-size: 16px;
      transition: border-color 0.3s ease;
    }
    
    .form-group input:focus {
      outline: none;
      border-color: #667eea;
    }
    
    .login-btn {
      width: 100%;
      padding: 12px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border: none;
      border-radius: 6px;
      font-size: 16px;
      font-weight: 500;
      cursor: pointer;
      transition: transform 0.2s ease;
    }
    
    .login-btn:hover {
      transform: translateY(-1px);
    }
    
    .login-btn:disabled {
      opacity: 0.6;
      cursor: not-allowed;
      transform: none;
    }
    
    .error-message {
      background: #fee;
      color: #c33;
      padding: 12px;
      border-radius: 6px;
      margin-bottom: 20px;
      border: 1px solid #fcc;
    }
    
    .success-message {
      background: #efe;
      color: #393;
      padding: 12px;
      border-radius: 6px;
      margin-bottom: 20px;
      border: 1px solid #cfc;
    }
    
    .back-link {
      text-align: center;
      margin-top: 20px;
    }
    
    .back-link a {
      color: #667eea;
      text-decoration: none;
      font-size: 14px;
    }
    
    .back-link a:hover {
      text-decoration: underline;
    }

    .setup-link {
      text-align: center;
      margin-top: 15px;
      padding-top: 15px;
      border-top: 1px solid #eee;
    }

    .setup-link a {
      color: #764ba2;
      text-decoration: none;
      font-size: 13px;
    }
  </style>
</head>
<body>
  <div class="login-container">
    <div class="login-card">
      <div class="login-header">
        <h1>Admin Login</h1>
        <p>Sign in with your Firebase account to access the admin dashboard</p>
      </div>
      
      <div id="message"></div>
      
      <form id="loginForm">
        <div class="form-group">
          <label for="email">Email Address</label>
          <input type="email" id="email" name="email" required>
        </div>
        
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" required>
        </div>
        
        <button type="submit" class="login-btn" id="loginBtn">
          Sign In
        </button>
      </form>
      
      <div class="setup-link">
        <a href="#" onclick="showInitialSetup()">Initial Setup (First Time)</a>
      </div>
      
      <div class="back-link">
        <a href="/">&larr; Back to Main Site</a>
      </div>
    </div>

    <!-- Initial Setup Modal (hidden by default) -->
    <div id="setupModal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1000;">
      <div style="display: flex; align-items: center; justify-content: center; height: 100%;">
        <div class="login-card" style="max-width: 450px;">
          <div class="login-header">
            <h1>Initial Admin Setup</h1>
            <p>Create the first super admin account</p>
          </div>
          
          <div id="setupMessage"></div>
          
          <form id="setupForm">
            <div class="form-group">
              <label for="setupEmail">Email Address</label>
              <input type="email" id="setupEmail" name="email" required>
            </div>
            
            <div class="form-group">
              <label for="setupPassword">Password (min 6 characters)</label>
              <input type="password" id="setupPassword" name="password" required minlength="6">
            </div>
            
            <div class="form-group">
              <label for="setupDisplayName">Display Name</label>
              <input type="text" id="setupDisplayName" name="displayName" placeholder="Super Administrator">
            </div>
            
            <button type="submit" class="login-btn" id="setupBtn">
              Create Super Admin
            </button>
            
            <button type="button" class="login-btn" onclick="hideInitialSetup()" style="background: #95a5a6; margin-top: 10px;">
              Cancel
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Firebase SDK -->
  <script src="https://www.gstatic.com/firebasejs/10.7.0/firebase-app-compat.js"></script>
  <script src="https://www.gstatic.com/firebasejs/10.7.0/firebase-auth-compat.js"></script>

  <script>
    // Initialize Firebase (you'll need to add your config)
    const firebaseConfig = {
      // Add your Firebase config here
      // This should match your client-side Firebase config
      apiKey: "your-api-key",
      authDomain: "your-auth-domain",
      projectId: "your-project-id",
      // ... other config
    };

    // Initialize Firebase
    firebase.initializeApp(firebaseConfig);
    const auth = firebase.auth();

    const loginForm = document.getElementById('loginForm');
    const setupForm = document.getElementById('setupForm');
    const loginBtn = document.getElementById('loginBtn');
    const setupBtn = document.getElementById('setupBtn');
    const messageDiv = document.getElementById('message');
    const setupMessageDiv = document.getElementById('setupMessage');
    
    function showMessage(message, type = 'error', isSetup = false) {
      const div = isSetup ? setupMessageDiv : messageDiv;
      div.innerHTML = `<div class="${type}-message">${message}</div>`;
    }
    
    function clearMessage(isSetup = false) {
      const div = isSetup ? setupMessageDiv : messageDiv;
      div.innerHTML = '';
    }

    function showInitialSetup() {
      document.getElementById('setupModal').style.display = 'block';
      clearMessage(true);
    }

    function hideInitialSetup() {
      document.getElementById('setupModal').style.display = 'none';
      clearMessage(true);
    }
    
    // Handle login form
    loginForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(loginForm);
      const email = formData.get('email');
      const password = formData.get('password');
      
      loginBtn.disabled = true;
      loginBtn.textContent = 'Signing in...';
      clearMessage();
      
      try {
        // Sign in with Firebase
        const userCredential = await auth.signInWithEmailAndPassword(email, password);
        const user = userCredential.user;
        
        // Get ID token
        const idToken = await user.getIdToken();
        
        // Verify with server and establish admin session
        const response = await fetch('/auth/admin/firebase/verify', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ idToken })
        });
        
        const result = await response.json();
        
        if (result.success) {
          showMessage('Login successful! Redirecting...', 'success');
          setTimeout(() => {
            window.location.href = result.redirect || '/admin';
          }, 1000);
        } else {
          showMessage(result.message || 'Login failed');
        }
      } catch (error) {
        console.error('Login error:', error);
        let message = 'Login failed. Please try again.';
        
        if (error.code) {
          switch (error.code) {
            case 'auth/user-not-found':
              message = 'No user found with this email address.';
              break;
            case 'auth/wrong-password':
              message = 'Incorrect password.';
              break;
            case 'auth/invalid-email':
              message = 'Invalid email address.';
              break;
            case 'auth/user-disabled':
              message = 'This account has been disabled.';
              break;
            case 'auth/too-many-requests':
              message = 'Too many failed attempts. Please try again later.';
              break;
          }
        }
        
        showMessage(message);
      } finally {
        loginBtn.disabled = false;
        loginBtn.textContent = 'Sign In';
      }
    });

    // Handle setup form
    setupForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(setupForm);
      const data = Object.fromEntries(formData);
      
      setupBtn.disabled = true;
      setupBtn.textContent = 'Creating...';
      clearMessage(true);
      
      try {
        const response = await fetch('/auth/admin/setup', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data)
        });
        
        const result = await response.json();
        
        if (result.success) {
          showMessage('Super admin created successfully! You can now log in.', 'success', true);
          setTimeout(() => {
            hideInitialSetup();
            document.getElementById('email').value = data.email;
          }, 2000);
        } else {
          showMessage(result.message || 'Setup failed', 'error', true);
        }
      } catch (error) {
        console.error('Setup error:', error);
        showMessage('Setup failed. Please try again.', 'error', true);
      } finally {
        setupBtn.disabled = false;
        setupBtn.textContent = 'Create Super Admin';
      }
    });
    
    // Auto-focus email field
    document.getElementById('email').focus();

    // Close setup modal when clicking outside
    document.getElementById('setupModal').addEventListener('click', (e) => {
      if (e.target.id === 'setupModal') {
        hideInitialSetup();
      }
    });
  </script>
</body>
</html>