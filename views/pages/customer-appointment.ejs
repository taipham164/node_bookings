<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Appointments</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .header-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem 0;
        }
        .appointment-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            margin-bottom: 1.5rem;
            overflow: hidden;
            transition: transform 0.2s;
        }
        .appointment-card:hover { transform: translateY(-2px); }
        .appointment-header, .appointment-body { padding: 1.5rem; }
        .appointment-header { border-bottom: 1px solid #e9ecef; }
        .status-badge {
            font-size: 0.75rem;
            padding: 0.4rem 0.8rem;
            border-radius: 20px;
            font-weight: 600;
            text-transform: uppercase;
        }
        .status-confirmed { background: #d4edda; color: #155724; }
        .status-pending { background: #fff3cd; color: #856404; }
        .status-cancelled { background: #f8d7da; color: #721c24; }
        .upcoming-card { border-left: 4px solid #28a745; }
        .service-item {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 0.75rem;
            margin-bottom: 0.5rem;
        }
        .staff-name-only {
            background: #f1f8ff;
            border-radius: 8px;
            padding: 0.75rem;
            margin-top: 1rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }
        .staff-avatar-small {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            overflow: hidden;
        }
        .staff-avatar-small img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        .empty-state {
            text-align: center;
            padding: 3rem 1rem;
            color: #6c757d;
        }
        .empty-state i {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }
        .duration-badge {
            background: #e9ecef;
            color: #495057;
            padding: 0.25rem 0.5rem;
            border-radius: 12px;
            font-size: 0.75rem;
        }
        .appointment-datetime {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 10px;
            padding: 1rem;
            text-align: center;
        }
        .price-info {
            background: #e8f4fd;
            border-radius: 8px;
            padding: 1rem;
            margin-top: 1rem;
        }
        .price-row.total {
            display: flex;
            justify-content: space-between;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="header-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1><i class="fas fa-calendar-check me-3"></i>My Appointments</h1>
                    <p class="mb-0 lead">Welcome back, <%= customer.givenName %> <%= customer.familyName %>!</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <form action="/auth/logout" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-outline-light">
                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="container my-5">
        <!-- Customer Info -->
        <div class="card appointment-card mb-4">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <h5 class="mb-1">
                            <i class="fas fa-user-circle me-2 text-primary"></i>
                            <%= customer.givenName %> <%= customer.familyName %>
                        </h5>
                        <p class="text-muted mb-0">
                            <i class="fas fa-envelope me-2"></i><%= customer.emailAddress %>
                            <span class="ms-3">
                                <i class="fas fa-phone me-2"></i><%= customer.phoneNumber %>
                            </span>
                        </p>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <div class="btn-group" role="group">
                            <a href="/auth/edit-profile" class="btn btn-outline-secondary">
                                <i class="fas fa-edit me-2"></i>Edit Profile
                            </a>
                            <a href="/auth/payment-methods" class="btn btn-outline-info">
                                <i class="fas fa-credit-card me-2"></i>Payment
                            </a>
                            <a href="/services" class="btn btn-outline-primary">
                                <i class="fas fa-plus me-2"></i> Book New
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger text-center">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Error:</strong> <%= error %>
            </div>
        <% } else if (!hasAppointments) { %>
            <div class="empty-state">
                <i class="fas fa-calendar-times"></i>
                <h3>No Appointments Found</h3>
                <p class="lead">You don't have any appointments yet.</p>
                <a href="/services" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus me-2"></i>Book Your First Appointment
                </a>
            </div>
        <% } else { %>
            <div class="text-center mb-4">
                <h2><i class="fas fa-clock me-2"></i>Your Appointments (<%= upcomingAppointments.length %>)</h2>
            </div>

            <% if (upcomingAppointments.length === 0) { %>
                <div class="empty-state">
                    <i class="fas fa-calendar-plus"></i>
                    <h4>No Upcoming Appointments</h4>
                    <a href="/services" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Book an Appointment
                    </a>
                </div>
            <% } else { %>
                <% upcomingAppointments.forEach(appointment => { %>
                    <div class="card appointment-card upcoming-card">
                        <div class="appointment-header">
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <div class="appointment-datetime">
                                        <div class="row">
                                            <div class="col-6">
                                                <i class="fas fa-calendar me-2"></i>
                                                <strong><%= appointment.formattedDate %></strong>
                                            </div>
                                            <div class="col-6">
                                                <i class="fas fa-clock me-2"></i>
                                                <strong><%= appointment.formattedTime %></strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 text-md-end">
                                    <span class="status-badge status-<%= appointment.status.toLowerCase() %>">
                                        <%= appointment.status %>
                                    </span>
                                    <div class="mt-2">
                                        <span class="duration-badge">
                                            <i class="fas fa-stopwatch me-1"></i>
                                            <%= Math.round(appointment.totalDuration / 1000 / 60) %> min
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="appointment-body">
                            <!-- Services -->
                            <h6 class="mb-3">
                                <i class="fas fa-cut me-2 text-primary"></i>Services
                            </h6>
                            <% appointment.serviceDetails.forEach(service => { %>
                                <div class="service-item">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <span class="fw-semibold d-block"><%= service.name %></span>
                                            <small class="text-muted">
                                                <i class="fas fa-clock me-1"></i>
                                                <%= Math.round(Number(service.duration) / 1000 / 60) %> minutes
                                            </small>
                                        </div>
                                        <% if (service.price && Number(service.price.amount) > 0) { %>
                                            <span class="fw-bold text-primary">
                                                $<%= (Number(service.price.amount) / 100).toFixed(2) %>
                                            </span>
                                        <% } %>
                                    </div>
                                </div>
                            <% }); %>
                            
                            <!-- Total Price -->
                            <% if (appointment.totalPrice > 0) { %>
                                <div class="price-info">
                                    <div class="price-row total">
                                        <span>Total Amount:</span>
                                        <span>$<%= (appointment.totalPrice / 100).toFixed(2) %></span>
                                    </div>
                                </div>
                            <% } %>

                            <!-- Staff -->
                            <% appointment.teamMemberProfiles.forEach(staff => { %>
                                <div class="staff-name-only">
                                    <div class="staff-avatar-small">
                                        <% if (staff.profileImageUrl) { %>
                                            <img src="<%= staff.profileImageUrl %>" alt="<%= staff.displayName %>">
                                        <% } else { %>
                                            <%= staff.displayName.charAt(0).toUpperCase() %>
                                        <% } %>
                                    </div>
                                    <div>
                                        <strong><i class="fas fa-user-tie me-2"></i>Service by <%= staff.displayName %></strong>
                                        <% if (staff.emailAddress) { %>
                                            <div class="small text-muted">
                                                <i class="fas fa-envelope me-1"></i><%= staff.emailAddress %>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            <% }); %>

                            <!-- Actions -->
                            <div class="row mt-4 pt-3 border-top">
                                <div class="col-6">
                                    <a href="/booking/<%= appointment.id %>" class="btn btn-outline-primary w-100">
                                        <i class="fas fa-eye me-2"></i>View Details
                                    </a>
                                </div>
                                <div class="col-6">
                                    <a href="/booking/<%= appointment.id %>/reschedule" class="btn btn-primary w-100">
                                        <i class="fas fa-edit me-2"></i>Reschedule
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-refresh every 5 minutes
            setInterval(() => window.location.reload(), 5 * 60 * 1000);

            // Session ping every 30 minutes
            let activityTimer;
            const resetActivityTimer = () => {
                clearTimeout(activityTimer);
                activityTimer = setTimeout(() => {
                    fetch('/auth/ping', { method: 'POST', credentials: 'same-origin' }).catch(() => {});
                }, 30 * 60 * 1000);
            };
            
            ['mousedown', 'mousemove', 'keypress', 'scroll', 'touchstart', 'click'].forEach(event => {
                document.addEventListener(event, resetActivityTimer, true);
            });
            resetActivityTimer();

            // Logout confirmation
            document.querySelector('button[type="submit"]')?.addEventListener('click', function(e) {
                if (!confirm('Are you sure you want to logout?')) {
                    e.preventDefault();
                }
            });

            // Format status badges
            const statusMap = {
                'ACCEPTED': 'Confirmed',
                'PENDING': 'Pending',
                'CANCELLED_BY_CUSTOMER': 'Cancelled by Customer',
                'CANCELLED_BY_SELLER': 'Cancelled',
                'CANCLED_BY_SELLER': 'Cancelled',
                'NO_SHOW': 'No Show',
                'COMPLETED': 'Completed'
            };
            
            document.querySelectorAll('.status-badge').forEach(badge => {
                const currentStatus = badge.textContent.trim();
                badge.textContent = statusMap[currentStatus] || currentStatus;
                
                if (currentStatus.includes('CANCELLED')) {
                    badge.classList.remove('status-confirmed', 'status-pending');
                    badge.classList.add('status-cancelled');
                }
            });
        });
    </script>
</body>
</html>