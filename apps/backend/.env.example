# Database
DATABASE_URL="postgresql://username:password@localhost:5432/tyler_platform?schema=public"

# Server
PORT=3001
NODE_ENV=development

# Square API Configuration
SQUARE_ACCESS_TOKEN="your_square_access_token_here"
SQUARE_ENVIRONMENT="sandbox"  # or "production"
SQUARE_LOCATION_ID="your_square_location_id_here"

# JWT Authentication (REQUIRED)
# CRITICAL: Generate a cryptographically secure random string (32+ characters)
# DO NOT use default values in production!
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# Or with OpenSSL: openssl rand -hex 64
JWT_SECRET="GENERATE_SECURE_RANDOM_STRING_HERE"